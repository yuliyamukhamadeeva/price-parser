@page
@model PriceParser.Web.Pages.Parsing.IndexModel
@{
    ViewData["Title"] = "Парсинг";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <div>
        <h1 class="h3 mb-1">Парсинг</h1>
        <div class="text-secondary">Запуск по кнопке и просмотр последних результатов</div>
    </div>

    <form method="post">
        <button class="btn btn-primary" type="submit">Запустить сейчас</button>
    </form>
</div>

<div class="row g-3">
    <div class="col-12 col-lg-5">
        <div class="card shadow-soft">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between mb-2">
                    <div class="fw-semibold">Минимальные цены</div>
                    <span class="badge text-bg-light border">@Model.Summary.Count</span>
                </div>

                @if (!Model.Summary.Any())
                {
                    <div class="text-secondary">Пока нет данных</div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table align-middle mb-0">
                            <thead>
                                <tr class="text-secondary">
                                    <th>Товар</th>
                                    <th class="text-nowrap">Цена</th>
                                    <th>Магазин</th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var r in Model.Summary)
                            {
                                <tr>
                                    <td class="fw-semibold">@r.ProductName</td>
                                    <td class="text-nowrap">@r.Price</td>
                                    <td class="text-secondary">@r.ShopName</td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-12 col-lg-7">
        <div class="card shadow-soft">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between mb-2">
                    <div class="fw-semibold">Последние записи</div>
                    <span class="badge text-bg-light border">@Model.LastLogs.Count</span>
                </div>

                @if (!Model.LastLogs.Any())
                {
                    <div class="text-secondary">Логов пока нет</div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table align-middle mb-0">
                            <thead>
                                <tr class="text-secondary">
                                    <th>Дата</th>
                                    <th>Товар</th>
                                    <th>Магазин</th>
                                    <th class="text-nowrap">Цена</th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var l in Model.LastLogs)
                            {
                                <tr>
                                    <td class="text-secondary text-nowrap">@l.Time</td>
                                    <td class="fw-semibold">@l.ProductName</td>
                                    <td class="text-secondary">@l.ShopName</td>
                                    <td class="text-nowrap">@l.Price</td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
