@page "{id:int}"
@model PriceParser.Web.Pages.Products.DetailsModel
@{
    ViewData["Title"] = "Товар";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <div>
        <a class="text-decoration-none" asp-page="Index">← Назад к товарам</a>
        <h1 class="h4 mt-2 mb-1">@Model.ProductName</h1>
        <div class="text-secondary">@Model.ProductSku</div>
    </div>
</div>

<div class="row g-3">
    <div class="col-12 col-lg-5">
        <div class="card shadow-soft">
            <div class="card-body">
                <h2 class="h6 mb-3">Добавить ссылку</h2>

                <form method="post" class="row g-3">
                    <div class="col-12">
                        <label class="form-label">Магазин</label>
                        <select class="form-select" asp-for="Input.ShopId" asp-items="Model.ShopOptions"></select>
                        <span class="text-danger" asp-validation-for="Input.ShopId"></span>
                    </div>

                    <div class="col-12">
                        <label class="form-label">Ссылка</label>
                        <input class="form-control" asp-for="Input.Url" placeholder="https://..." />
                        <span class="text-danger" asp-validation-for="Input.Url"></span>
                    </div>

                    <div class="col-12">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" asp-for="Input.IsActive" />
                            <label class="form-check-label" asp-for="Input.IsActive">Активна</label>
                        </div>
                    </div>

                    <div class="col-12">
                        <button class="btn btn-primary w-100" type="submit">Сохранить</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-12 col-lg-7">
        <div class="card shadow-soft">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between mb-2">
                    <h2 class="h6 mb-0">Ссылки</h2>
                    <span class="badge text-bg-light border">@Model.Links.Count</span>
                </div>

                @if (!Model.Links.Any())
                {
                    <div class="text-secondary">Ссылок пока нет</div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table align-middle mb-0">
                            <thead>
                                <tr class="text-secondary">
                                    <th>Магазин</th>
                                    <th>Ссылка</th>
                                    <th class="text-nowrap">Статус</th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var l in Model.Links)
                            {
                                <tr>
                                    <td class="fw-semibold">@l.ShopName</td>
                                    <td class="text-truncate" style="max-width: 340px;">
                                        <a href="@l.Url" target="_blank" class="text-decoration-none">@l.Url</a>
                                    </td>
                                    <td>
                                        @if (l.IsActive)
                                        {
                                            <span class="badge text-bg-success">Активна</span>
                                        }
                                        else
                                        {
                                            <span class="badge text-bg-secondary">Отключена</span>
                                        }
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
