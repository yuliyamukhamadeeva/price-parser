@page "{id:int}"
@model PriceParser.Web.Pages.Products.DetailsModel
@{
    ViewData["Title"] = "Товар";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <div>
        <a class="text-decoration-none" asp-page="Index">← Назад к товарам</a>
        <h1 class="h4 mt-2 mb-1">@Model.ProductName</h1>
        <div class="text-secondary">@Model.ProductSku</div>
    </div>

    <form method="post" asp-page-handler="Parse" asp-route-id="@Model.ProductId">
        <button class="btn btn-primary" type="submit">Спарсить этот товар</button>
    </form>
</div>

@if (TempData["Success"] is string ok)
{
    <div class="alert alert-success">@ok</div>
}
@if (TempData["Error"] is string err)
{
    <div class="alert alert-danger">@err</div>
}

<div class="row g-3">
    <div class="col-12 col-lg-5">
        <div class="card shadow-soft">
            <div class="card-body">
                <h2 class="h6 mb-3">Минимальная цена</h2>

                @if (Model.MinPrice is null)
                {
                    <div class="text-secondary">Пока нет данных. Нажми “Спарсить этот товар”.</div>
                }
                else
                {
                    <div class="d-flex align-items-baseline gap-2">
                        <div class="h3 mb-0">@Model.MinPrice.Value.ToString("N0") ₽</div>
                        <div class="text-secondary">@Model.MinShopName</div>
                    </div>
                    <div class="text-secondary small mt-1">По последним логам парсинга</div>
                }
            </div>
        </div>

        <div class="card shadow-soft mt-3">
            <div class="card-body">
                <h2 class="h6 mb-3">Добавить ссылку</h2>

                <form method="post" class="row g-3">
                    <div class="col-12">
                        <label class="form-label">Магазин</label>
                        <select class="form-select" asp-for="Input.ShopId" asp-items="Model.ShopOptions"></select>
                        <span class="text-danger" asp-validation-for="Input.ShopId"></span>
                    </div>

                    <div class="col-12">
                        <label class="form-label">Ссылка</label>
                        <input class="form-control" asp-for="Input.Url" placeholder="https://..." />
                        <span class="text-danger" asp-validation-for="Input.Url"></span>
                    </div>

                    <div class="col-12">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" asp-for="Input.IsActive" />
                            <label class="form-check-label" asp-for="Input.IsActive">Активна</label>
                        </div>
                    </div>

                    <div class="col-12">
                        <button class="btn btn-outline-primary w-100" type="submit">Сохранить</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-12 col-lg-7">
        <div class="card shadow-soft">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between mb-2">
                    <h2 class="h6 mb-0">Ссылки</h2>
                    <span class="badge text-bg-light border">@Model.Links.Count</span>
                </div>

                @if (!Model.Links.Any())
                {
                    <div class="text-secondary">Ссылок пока нет</div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table align-middle mb-0">
                            <thead>
                                <tr class="text-secondary">
                                    <th>Магазин</th>
                                    <th>Ссылка</th>
                                    <th class="text-nowrap">Статус</th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var l in Model.Links)
                            {
                                <tr>
                                    <td class="fw-semibold">@l.ShopName</td>
                                    <td class="text-truncate" style="max-width: 340px;">
                                        <a href="@l.Url" target="_blank" class="text-decoration-none">@l.Url</a>
                                    </td>
                                    <td>
                                        @if (l.IsActive)
                                        {
                                            <span class="badge text-bg-success">Активна</span>
                                        }
                                        else
                                        {
                                            <span class="badge text-bg-secondary">Отключена</span>
                                        }
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>

        <div class="card shadow-soft mt-3">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between mb-2">
                    <h2 class="h6 mb-0">Последние логи парсинга</h2>
                    <span class="badge text-bg-light border">@Model.LastLogs.Count</span>
                </div>

                @if (!Model.LastLogs.Any())
                {
                    <div class="text-secondary">Логов пока нет</div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table align-middle mb-0">
                            <thead>
                                <tr class="text-secondary">
                                    <th>Дата</th>
                                    <th>Магазин</th>
                                    <th class="text-end">Цена</th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var x in Model.LastLogs)
                            {
                                <tr>
                                    <td class="text-secondary">@x.ParsedAtLocal</td>
                                    <td class="fw-semibold">@x.ShopName</td>
                                    <td class="text-end">@x.PriceRub.ToString("N0") ₽</td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
